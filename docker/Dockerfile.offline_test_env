FROM python:3.9.5
COPY scripts/testing/offline_testing/ app/
COPY Makefile app/
COPY requirements/test-env-requirements.txt app/requirements/
COPY data/test_environment app/data/test_environment
WORKDIR app/
RUN apt-get update && apt-get install make && apt-get install gcc && apt-get install g++
RUN pip install --upgrade pip setuptools wheel
RUN make offline-test-env-install
EXPOSE 8501
ENTRYPOINT ["streamlit", "run"]
CMD ["present_matches.py"]

#Streamlit parameters
ENV LC_ALL=C.UTF-8
ENV LANG=C.UTF-8
RUN mkdir -p /root/.streamlit
RUN bash -c 'echo -e "\
[general]\n\
email = \"\"\n\
" > /root/.streamlit/credentials.toml'
RUN bash -c 'echo -e "\
[server]\n\
enableCORS = false\n\
" > /root/.streamlit/config.toml'